<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.helmholtzschule_frankfurt.helmholtzapp.LoginActivity"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:orientation="vertical">

        <EditText
            android:id="@+id/etBenutzername"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:ems="10"
            android:hint="Benutzername"
            android:inputType="textPersonName"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:text="Klasse wÃ¤hlen:" />

        <Spinner
            android:id="@+id/choose_klasse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etBenutzername"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown"/>

        <EditText
            android:id="@+id/etPasswort"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:ems="10"
            android:hint="Passwort"
            android:inputType="numberPassword"
            android:backgroundTint="@color/colorPrimary"/>

        <Button
            android:id="@+id/bLogIn"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="LOGIN"
            android:background="@drawable/button_login_background"
            />

    </LinearLayout>
