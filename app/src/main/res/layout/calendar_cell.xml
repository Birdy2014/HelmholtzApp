<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="50dp"
    android:layout_height="70dp"
    android:background="@drawable/stundenplan_cell_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/calendarCellBackground">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="viewEnd"
            android:gravity="end"
            android:text="24"
            android:layout_marginRight="5dp"
            android:id="@+id/calendarDateView"
            android:textColor="#000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:id="@+id/dateSpot0"
            android:layout_below="@id/calendarDateView"
            android:layout_marginTop="1dp"
            android:textSize="7sp"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:id="@+id/dateSpot1"
            android:layout_below="@id/dateSpot0"
            android:layout_marginTop="1dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:id="@+id/dateSpot2"
            android:layout_below="@id/dateSpot1"
            android:layout_marginTop="1dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:id="@+id/dateSpot3"
            android:layout_below="@id/dateSpot2"
            android:layout_marginTop="1dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:id="@+id/dateSpot4"
            android:layout_below="@id/dateSpot3"
            android:layout_marginTop="1dp"/>

    </RelativeLayout>

</RelativeLayout>