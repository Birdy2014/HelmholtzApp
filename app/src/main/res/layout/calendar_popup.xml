<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calendar_popup_header"
        android:text="Termin hinzufÃ¼gen"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="10dp"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beginn:"
        android:textSize="20sp"
        android:id="@+id/calendar_popup_start_header"
        android:layout_below="@id/calendar_popup_header"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/popup_start_view"
        android:layout_below="@id/calendar_popup_header"
        android:layout_toEndOf="@id/calendar_popup_start_header"
        android:layout_toRightOf="@id/calendar_popup_start_header"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:text="12. Oktober 2018"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/popup_end_view"
        android:layout_below="@id/calendar_popup_start_header"
        android:layout_toEndOf="@id/calendar_popup_start_header"
        android:layout_toRightOf="@id/calendar_popup_start_header"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:text="12.November 2018"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calendar_popup_apply"
        android:layout_below="@id/popup_end_view"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp" />

</RelativeLayout>