<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/mensaplanText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:text="Mensaplan"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/mensaplanWeek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Kalenderwoche 42"
        android:textAlignment="center"
        android:textStyle="bold" />

    <android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/swiperefresh_mensa"
        android:layout_width="match_parent"
        android:layout_height="390dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        tools:context="de.helmholtzschule_frankfurt.helmholtzapp.activity.MainActivity">

        <ListView
            android:id="@+id/mensaMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="#FEFEFE"
            android:dividerHeight="10dp" />

    </android.support.v4.widget.SwipeRefreshLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Bitte beachten Sie, dass dieser Plan durch die Verarbeitungsmethode Fehler enthalten kann."
        android:textAlignment="center" />


</LinearLayout>