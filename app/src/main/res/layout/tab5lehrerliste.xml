<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="15dp"
    tools:context="de.helmholtzschule_frankfurt.helmholtzapp.tab.Tab5lehrerliste"
    android:focusableInTouchMode="true">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Lehrerliste"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        android:id="@+id/lehrerlisteText"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp" />

    <android.support.v7.widget.SearchView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:id="@+id/lehrerliste_search"
        android:layout_below="@id/lehrerlisteText"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="-5dp"
        android:layout_marginStart="-14dp"
        app:queryHint="Suche"
        android:inputType="text"
        />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lehrer_list_view"
        android:layout_below="@id/lehrerliste_search"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:divider="@color/colorBorderGrey"/>
</RelativeLayout>